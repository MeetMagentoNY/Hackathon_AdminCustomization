<div class="header-top">
    <a href="<?php echo $this->getHomeLink() ?>"><img src="<?php echo $this->getCustomLogo(); ?>" alt="<?php echo $this->getLogoAlt();?>" class="logo custom" <?php echo $this->getLogoHeight();?>/></a>
    <div class="header-right">
        <p class="super">
